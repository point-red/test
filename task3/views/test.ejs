<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>LIST</title>
    <link rel="stylesheet" href="/css/style.css">
    <script src="/send_url.js"></script>
  </head>
  <body>
    <header>
      <a class="header-logo">LIST</a>
    </header>
    <div class="container">
      <div class="container-header">
        <h1>user</h1>
        <a href="/add-user" class="new-button">+ Add</a>
      </div>
      <table class="index-table-wrapper">
        <thead>
          <div class="table-head">
            <span class="">ID</span>
            <span class="">name</span>
            <span class="">email</span>
            <span class="" >age</span>
            <span class="">Options</span>
          </div>
        </thead>
        <tbody>
          <tr class="table-body">
            <% users.forEach((user) => { %>
                <div class="table-head">
                  <span><%= user.id %></span>
                  <span><%= user.name %></span>
                  <span><%= user.email %></span>
                  <span><%= user.age %></span>
                  <span>
                    <form action="/delete/<%= user.id %>" method="post">
                      <input type="submit" value="Hapus">
                    </form>
                  </span>
                    <span><a href="/edit/<%= user.id %>">Edit</a></span>
                </div>
            <% }) %>
              </tr>
        </tbody>
      </table>
    </div>
  </body>
</html>